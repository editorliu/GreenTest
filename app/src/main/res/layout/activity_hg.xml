<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.er.greentest.HGActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="440dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/banner"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:src="@drawable/bannerline"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/shape_gray_round_stroke">

            <TextView
                android:id="@+id/item"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/inputbg"
                android:gravity="center"
                android:text="全库"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt21"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/search"
                android:layout_toRightOf="@+id/item"
                android:background="@null"
                android:hint="@string/homeEditHint"
                android:textSize="@dimen/txt21"/>

            <TextView
                android:id="@+id/search"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_blue_round_solid"
                android:gravity="center"
                android:text="@string/homeSearch"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt21"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/shape_blue_gray_round_solid"
            android:gravity="center"
            android:text="@string/homePrimarySearch"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:src="@drawable/icon_hgcd"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_tjfx1"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_jsz"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:src="@drawable/icon_zghg"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_tjfx2"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_jsz"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:src="@drawable/icon_flfg"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_jsz"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="166dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/icon_jsz"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/footer"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/txt19"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="版权所有：copyright©海关出版社"
            android:textColor="@color/txtGray"
            android:layout_height="75dp"/>
    </RelativeLayout>


</LinearLayout>
